<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterador de Cor de Fundo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            min-height: 100vh;
            transition: background-color 0.5s ease;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #3b82f6; 
        }
    </style>
</head>
<body>

    <button id="color-button" onclick="changeColor()" 
        class="px-8 py-4 bg-white text-gray-800 font-bold text-xl rounded-xl shadow-lg 
               hover:bg-gray-100 transition-all duration-200 
               focus:outline-none focus:ring-4 focus:ring-gray-300 transform hover:scale-105">
        Alterar Cor de Fundo
    </button>

    <script>
        
        const changeColor = () => {
            const randomInt = Math.floor(Math.random() * 16777215);
            const hexColor = randomInt.toString(16).padStart(6, '0');
            document.body.style.backgroundColor = '#' + hexColor;
        };

        document.addEventListener('DOMContentLoaded', changeColor);

    </script>

</body>
</html>